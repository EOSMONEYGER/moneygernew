<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f3db"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_act_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="37th"
        android:textAlignment="center"
        android:textColor="#5a876e"
        android:textSize="23sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/info_act_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#33ffffff"></android.support.v7.widget.RecyclerView>


    <ImageButton
        android:id="@+id/info_act_send_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#e87171"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_message"
        android:textColor="#ffffffff"
        android:textSize="23sp" />

</LinearLayout>